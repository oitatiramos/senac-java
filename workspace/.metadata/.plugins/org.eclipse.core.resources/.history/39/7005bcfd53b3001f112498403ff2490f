package zoo;

public class Gato extends Animal {
	
	private double peso;
	
	public void setGato() {
		if(peso < 1) {
			this.peso = peso;
			System.out.println("o valor ...");
		}	
	}	
	
	public void emitirSom(String animal){
        if (peso <= 3){
            System.out.println("Cachorro: Au, Au!");
        } if (peso > 3 && peso <= 5){
            System.out.println("Cachorro: Aaaaaau!");
        } if (peso > 5){
            System.out.println("Cachorro: Au, Au, Au!");
        }
    }
}
